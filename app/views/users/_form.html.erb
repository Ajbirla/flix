<%= render 'shared/errors', object: @user%>


<%= form_for @user do |f| %>
<center>

<table>
	<tr>
		<td>
			<%= f.label:Name %></td>
			<td><%= f.text_field:name, :autofocus=>true %>
		</td>
	</tr>
	<tr>
		<td>
			<%= f.label:Email %></td>
			<td>
			<%= f.email_field:email  %>
		</td>
	</tr>
	<tr>
		<td>
			<%= f.label:password %></td>
			<td>
			<%= f.password_field:password%>
		</td>
	</tr>
	<tr>
		<td>
			<%= f.label:confirm_password %></td>
			<td>
			<%= f.password_field:password_confirmation%>
		</td>
	</tr>
	
	<tr><td></td><td> <%= link_to "Cancel", users_path, class: 'btn btn-primary' %>
		<% if @user.new_record? %>
			<%= f.submit "Sing Up"%>
			<%else%>
			<%= f.submit "Update"%>
			<%end%>
			 </td> </tr>
</table>
</center>
<%end%>